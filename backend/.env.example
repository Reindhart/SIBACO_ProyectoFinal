# Configuración general
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
FLASK_APP=wsgi.py
NODE_ENV=development

# Base de datos - Desarrollo
# DB_TYPE_DEV: Tipo de base de datos (sqlite, postgresql, mysql, mariadb, oracle, sqlserver)
DB_TYPE_DEV=sqlite
DB_NAME_DEV=medical_diagnostic_dev.db
# Para SQLite, solo se necesita DB_NAME_DEV (ruta del archivo .db)
# Para otras bases de datos, descomentar y configurar las siguientes variables:
# DB_USER_DEV=postgres
# DB_PASSWORD_DEV=postgres
# DB_HOST_DEV=localhost
# DB_PORT_DEV=5432

# Base de datos - Producción
DB_TYPE_PROD=sqlite
DB_NAME_PROD=medical_diagnostic_prod.db
# Para SQLite, solo se necesita DB_NAME_PROD (ruta del archivo .db)
# Para otras bases de datos, descomentar y configurar las siguientes variables:
# DB_USER_PROD=postgres
# DB_PASSWORD_PROD=postgres
# DB_HOST_PROD=localhost
# DB_PORT_PROD=5432

# CORS
CORS_WHITELIST=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WHITELIST=127.0.0.1
